<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Invoice Form View to Add Meter Reading Columns -->
    <record id="product_template_form_view_inherit_meter" model="ir.ui.view">
        <field name="name">product.template.form.inherit.meter</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='detailed_type']" position="after">
                <field name="is_metered_product"/>
            </xpath>
        </field>
    </record>
</odoo>